<h1><%= @pet.name %></h1>
<h6><%= link_to 'View all Pets', '/pets' %></h6>
<h6><%= link_to 'View all Shelters', '/shelters' %></h6>
<img src= <%= @pet.image %> />
<p><%= @pet.description %></p>
<p>Approximate Age: <%= @pet.approximate_age %></p>
<p>Gender: <%= @pet.sex %></p>
<p>Adoption Status: <%= @pet.adoption_status %></p>
<p> Located At: <a href="/shelters/<%= @pet.shelter_id %>"><%= @pet.shelter.name %></a></p>
<a href="/pets/<%= @pet.id %>/edit">Update Pet</a>
<form action="/pets/<%= @pet.id %>" method="POST">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
   <input type="hidden" name="_method" value="DELETE">
   <input type="submit" value="Delete Pet"/>
 </form>
